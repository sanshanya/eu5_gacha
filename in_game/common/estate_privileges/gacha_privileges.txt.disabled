        var:gacha_character_count >= 3 
    }
    
    country_modifier = {
        all_power_cost = -0.05
        global_gacha_guild_estate_power = 0.15
        gacha_guild_estate_target_satisfaction = 10 # ✅ 使用具体的数字
    }
}

