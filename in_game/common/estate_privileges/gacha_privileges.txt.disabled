privilege_gacha_establish_guild = {
    estate = gacha_guild_estate
    
    country_modifier = {
        global_crown_estate_power = 0.10
        global_prestige_modifier = 0.05
        
        # ✅ 使用我们自己定义的、真实存在的修正
        global_gacha_guild_estate_power = 0.20
        gacha_guild_estate_target_satisfaction = 10 # ✅ 使用具体的数字
