situation_panel = {

  ##################################### SUBHEADER #####################################

  # Default
  blockoverride "situation_subheader_content" { }

  ##################################### MAIN CONTENT #####################################

  blockoverride "situation_panel_main_content" {

    # Overview
    situation_card_expandable = {
      blockoverride "header_text" {
        text = "gacha_inazuma_reconstruction_overview_title"
      }
      blockoverride "header_icon" {
        texture = "gfx/interface/icons/map_subdivisons/unlocked.dds"
      }
      blockoverride "bottom_content" {
        text_multi = {
          margin = { 15 0 }
          layoutpolicy_horizontal = expanding
          max_width = 480
          autoresize = yes
          text = "gacha_inazuma_reconstruction_overview_desc"
        }
      }
    }

    # Status
    situation_card_expandable = {
      blockoverride "header_text" {
        text = "gacha_inazuma_reconstruction_status_title"
      }
      blockoverride "header_icon" {
        texture = "gfx/interface/icons/flat_icons/geopolitics/location.dds"
      }
      blockoverride "bottom_content" {
        text_multi = {
          margin = { 15 0 }
          layoutpolicy_horizontal = expanding
          max_width = 480
          autoresize = yes
          text = "gacha_inazuma_reconstruction_status_tt"
        }
      }
    }
  }
}
